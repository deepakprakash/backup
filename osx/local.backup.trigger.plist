<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>EnableGlobbing</key>
	<false/>
	<key>Label</key>
	<string>local.backup.trigger</string>
	<key>Program</key>
	<string>/usr/local/bin/trigger_backup.sh</string>
	<key>StandardErrorPath</key>
	<string>/tmp/local.backup.err</string>
	<key>StandardOutPath</key>
	<string>/tmp/local.backup.out</string>
	<key>WatchPaths</key>
	<array>
		<string>/Volumes</string>
	</array>
</dict>
</plist>
